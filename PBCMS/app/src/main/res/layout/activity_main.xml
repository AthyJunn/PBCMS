<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Dark overlay -->
<View
    android:id="@+id/darkOverlay"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#80000000"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
<TextView
    android:id="@+id/titleText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="PB Chiller\nMonitoring System"
    android:textSize="28sp"
    android:textStyle="bold"
    android:fontFamily="sans-serif"
    android:textColor="#FFFFFF"
    android:lineSpacingExtra="4dp"
    android:gravity="start"
    app:layout_constraintBottom_toTopOf="@id/subtitleText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
<TextView
    android:id="@+id/subtitleText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Stay Cool, Stay In Control."
    android:textSize="14sp"
    android:fontFamily="sans-serif"
    android:textColor="#DDDDDD"
    android:gravity="start"
    app:layout_constraintBottom_toTopOf="@id/getStartedButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="24dp" />

    <!-- Get Started Button -->
<Button
    android:id="@+id/getStartedButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Get started"
    app:cornerRadius="12dp"
    android:textAllCaps="false"
    android:textSize="16sp"
    android:fontFamily="sans-serif-medium"
    android:textColor="#FFFFFF"
    android:backgroundTint="#B85858"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="62dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

