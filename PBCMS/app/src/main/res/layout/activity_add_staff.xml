<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F8FF"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Header Row: Back Button + Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@android:color/transparent"
            app:tint="@color/black"
            android:contentDescription="Back" />

        <!-- Page Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Staff Member"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Profile Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="80dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Rounded background -->
        <ImageView
            android:id="@+id/profileBg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_background"
            android:clipToOutline="true"
            android:contentDescription="Profile Background" />
        />

        <!-- Profile Circle (sits at bottom edge of background, overlaps out) -->

        <!-- Small camera icon -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@id/profileBg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-59dp"
            android:scaleType="centerCrop"
            app:tint="#D7DCE4"
            android:src="@drawable/ic_baseline_account_circle_24" />

        <ImageView
            android:id="@+id/cameraIconSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@drawable/bg_circle_gray"
            android:padding="3dp"
            android:layout_alignBottom="@id/profileImage"
            android:layout_alignEnd="@id/profileImage"
            android:layout_margin="2dp" />

        <!-- Edit button with rounded background -->

    </RelativeLayout>

    <!-- First & Last Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="First Name"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:textColor="@android:color/white"
            android:textColorHint="#8B9297"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Last Name"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:textColor="@android:color/white"
            android:textColorHint="#8B9297"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Email -->
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="14sp"
        android:padding="12dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/bg_input"
        android:textColor="@android:color/white"
        android:textColorHint="#8B9297"
        android:layout_marginBottom="15dp" />

    <!-- Password -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="14sp"
        android:padding="12dp"
        android:inputType="textPassword"
        android:background="@drawable/bg_input"
        android:textColor="@android:color/white"
        android:textColorHint="#8B9297"
        android:layout_marginBottom="15dp" />

    <!-- Phone No -->
    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone No"
        android:textSize="14sp"
        android:padding="12dp"
        android:inputType="phone"
        android:background="@drawable/bg_input"
        android:textColor="@android:color/white"
        android:textColorHint="#8B9297"
        android:layout_marginBottom="15dp" />

    <!-- Birthday -->
    <EditText
        android:id="@+id/birthDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birthday"
        android:textSize="14sp"
        android:padding="12dp"
        android:inputType="date"
        android:background="@drawable/bg_input"
        android:textColor="@android:color/white"
        android:textColorHint="#8B9297"
        android:layout_marginBottom="25dp" />


    <!-- Add Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button_admin"
        android:text="Add Staff"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:backgroundTint="@null" />

</LinearLayout>
