<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#121212"
            android:layout_marginBottom="12dp" />

        <!-- Temperature Notification -->
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_device_thermostat_24"
                android:tint="#FFB74D"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature Alert Triggered"
                    android:textStyle="bold"
                    android:textColor="#121212"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Monitoring"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room 1 temperature exceeded 32Â°C. Cooling system automatically activated to stabilize conditions."
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Humidity Notification -->
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_humidity_mid_24"
                android:tint="#4FC3F7"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity Level Warning"
                    android:textStyle="bold"
                    android:textColor="#121212"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Monitoring"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity level dropped below 25%. Humidifier has been activated automatically."
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- Door Status Notification -->
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_door_open_notification"
                android:tint="#FF7043"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Door Status Changed"
                    android:textStyle="bold"
                    android:textColor="#121212"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Access Log Update"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The main entrance door was opened manually at 10:42 PM. Ensure authorized access only."
                    android:textColor="#AAAAAA"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
