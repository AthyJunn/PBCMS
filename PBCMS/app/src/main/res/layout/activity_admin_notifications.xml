<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:layout_marginTop="40dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#121212"
                android:layout_marginBottom="12dp" />

            <!-- Temperature Notification -->
            <LinearLayout
                android:id="@+id/temperatureNotif"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">

                <ImageView
                    android:id="@+id/temperatureIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_thermostat_24"
                    app:tint="#FFB74D"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/temperatureTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Alert Triggered"
                        android:textStyle="bold"
                        android:textColor="#121212"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/temperatureSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor Monitoring"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/temperatureMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room 1 temperature exceeded 32Â°C. Cooling system automatically activated to stabilize conditions."
                        android:textColor="#AAAAAA"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/temperatureDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Humidity Notification -->
            <LinearLayout
                android:id="@+id/humidityNotification"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">

                <ImageView
                    android:id="@+id/humidityIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_water_drop_24"
                    app:tint="#4FC3F7"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/humidityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity Level Warning"
                        android:textStyle="bold"
                        android:textColor="#121212"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/humiditySource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor Monitoring"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/humidityMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity level dropped below 25%. Humidifier has been activated automatically."
                        android:textColor="#AAAAAA"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/humidityDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Door Status Notification -->
            <LinearLayout
                android:id="@+id/doorNotification"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">

                <ImageView
                    android:id="@+id/doorIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_door_open_notification"
                    app:tint="#FF7043"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/doorTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Door Status Changed"
                        android:textStyle="bold"
                        android:textColor="#121212"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/doorSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Access Log Update"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/doorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The main entrance door was opened manually at 10:42 PM. Ensure authorized access only."
                        android:textColor="#AAAAAA"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_baseline_notifications_none_24"
                    app:tint="#BCBCBC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:text="No notifications yet"
                    android:textColor="#999999"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--  Bottom Navigation (fixed)  -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rounded_toolbar_background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_home_24"
            android:scaleType="centerInside"
            android:padding="14dp" />

        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_history_24"
            android:scaleType="centerInside"
            app:tint="#FFFFFF"
            android:padding="14dp" />

        <ImageButton
            android:id="@+id/searchStaffButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/notificationsButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:scaleType="centerInside"
            app:tint="#FFFFFF"
            android:padding="14dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>