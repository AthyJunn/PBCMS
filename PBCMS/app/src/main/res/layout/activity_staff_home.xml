<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Settings button -->
            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_account_circle_24"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="28dp"
                app:tint="#FFFFFF"
                android:layout_gravity="end" />

            <!-- Greeting Section -->
            <LinearLayout
                android:id="@+id/greetingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Greeting Word -->
                    <TextView
                        android:id="@+id/greetingWord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="6dp" />

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenifer!"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Good Morning -->
                <TextView
                    android:id="@+id/greetingMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning"
                    android:textSize="15sp"
                    android:textColor="#B0B0B0"
                    android:fontFamily="sans-serif" />


            </LinearLayout>


            <!-- Top Card with rounded corners -->
            <FrameLayout
                android:id="@+id/topCard"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:clipToOutline="true"
                android:background="@drawable/rounded_square_background"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="26dp">

                    <!-- Wordings on left -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="vertical">

                        <!-- Power row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="28dp"
                                android:contentDescription="Power Icon"
                                android:src="@drawable/outline_cable_24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="power"
                                android:textColor="@android:color/white"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <!-- Door Status row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/doorStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="Close"
                                android:textColor="@android:color/white"
                                android:textSize="40sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="9dp"
                                android:contentDescription="Info Icon"
                                android:src="@drawable/baseline_info_24" />
                        </LinearLayout>

                        <!-- Wifi row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="28dp"
                                android:contentDescription="WiFi Icon"
                                android:src="@drawable/outline_android_wifi_3_bar_24" />

                            <TextView
                                android:id="@+id/wifiStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="connected"
                                android:textColor="@android:color/white"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Picture on the right -->
                    <ImageView
                        android:id="@+id/topImage2"
                        android:layout_width="350px"
                        android:layout_height="725px"
                        android:layout_marginStart="16dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fridge_pbcms" />
                </LinearLayout>

            </FrameLayout>

            <!-- Middle Cards (Linear Layout inside) -->
            <LinearLayout
                android:id="@+id/middleCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp">

                <!-- Temperature -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/rounded_box_background"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/baseline_circle_24"
                        android:padding="12dp"
                        android:src="@drawable/outline_device_thermostat_24"
                        app:tint="#000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tempValueCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="25"
                            android:textColor="@android:color/black"
                            android:textSize="21sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="°C"
                            android:textColor="@android:color/black"
                            android:textSize="21sp"
                            android:layout_marginStart="4dp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Humidity -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/rounded_grey_background"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:background="@drawable/baseline_circle_24"
                        android:padding="14dp"
                        android:src="@drawable/outline_humidity_mid_24"
                        app:tint="#000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/humidityValueCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65"
                            android:textColor="@android:color/white"
                            android:textSize="21sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@android:color/white"
                            android:textSize="21sp"
                            android:layout_marginStart="4dp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation (fixed) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:background="@drawable/rounded_toolbar_background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_home_24"
            android:scaleType="centerInside"
            android:padding="14dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_history_24"
            android:scaleType="centerInside"
            app:tint="#FFFFFF"
            android:padding="14dp"
            android:layout_marginHorizontal="40dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_notifications_24"
            android:scaleType="centerInside"
            app:tint="#FFFFFF"
            android:padding="14dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>