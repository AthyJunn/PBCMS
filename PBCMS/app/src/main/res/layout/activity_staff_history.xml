<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1E1E1E">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/back_arrow"
            android:background="@android:color/transparent"
            app:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History Records"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PB Grocery, Kuala Lumpur, Malaysia"
                android:textColor="#BBBBBB"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Time Range Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2A2A2A"
                android:padding="6dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:clipToPadding="false"
                android:backgroundTintMode="add">

                <TextView
                    android:id="@+id/dayBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Day"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#FFFFFF"
                    android:background="#B85858"/>

                <TextView
                    android:id="@+id/weekBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Week"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/monthBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Month"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/yearBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Year"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Date Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/prevDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="◀"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue 23, Mar 2025"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/nextDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:padding="10dp" />
            </LinearLayout>

            <!-- Temperature Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#2A2A2A"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:backgroundTintMode="add">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tempValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:35 Temperature: 27°C"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <!-- Chart Placeholder -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/temperatureChart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#1E1E1E"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Wind Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#2A2A2A"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/humidityValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:35 Humidity: 55%"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <!-- Chart Placeholder -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/humidityChart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#1E1E1E"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Door History Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Door History"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- Door History Items -->
            <LinearLayout
                android:id="@+id/doorHistoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_door_card_dark"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_door_open"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00 AM"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Door Opened"
                            android:textColor="#BBBBBB"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Another Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_door_card_dark"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_door_closed"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:10 AM"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Door Closed"
                            android:textColor="#BBBBBB"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>