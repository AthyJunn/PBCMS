                <!-- Continue the same block for Chong, Wilson, Jason, Alif, Hisaf, Clamen, Jaden, Tristan, Raj, Simon -->
                <!-- All with android:layout_width="30dp" android:layout_height="30dp" for ImageView and android:textSize="20sp" -->

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- Floating Add Button -->
    <ImageButton
        android:id="@+id/addStaffBtn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/baseline_add_circle"
        android:src="@drawable/baseline_add_button"
        app:tint="@android:color/white"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rounded_toolbar_background"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_home_24"
            android:scaleType="centerInside"
            android:padding="14dp"/>

        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_history_24"
            android:scaleType="centerInside"
            app:tint="#FFFFFF"
            android:padding="14dp"/>

        <ImageButton
            android:id="@+id/searchStaffButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_search_24"
            app:tint="#FFFFFF"/>

        <ImageButton
            android:id="@+id/notificationsButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_notifications_24"
            android:scaleType="centerInside"
            app:tint="#FFFFFF"
            android:padding="14dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
