<resources xmlns:tools="http://schemas.android.com/tools">
<style name="Theme.PBCMS" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    <!-- Primary brand color (your button color) -->
    <item name="colorPrimary">#b85858</item>
    <item name="colorPrimaryVariant">#994545</item> <!-- darker shade for status bar -->
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color (optional highlight color) -->
    <item name="colorSecondary">#b85858</item>
    <item name="colorSecondaryVariant">#994545</item>
    <item name="colorOnSecondary">@color/white</item>

    <!-- Status bar color -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    <!-- Remove default Material shapes if using custom drawables -->
    <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
</style>
</resources>
