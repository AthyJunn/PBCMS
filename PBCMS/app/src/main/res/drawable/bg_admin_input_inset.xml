<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base pale blue background matching the panel -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B1BCC7"/> <!-- lighter base color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Light top-left highlight -->
    <item android:left="3dp" android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#D3DBE2"/> <!-- lighter highlight -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Dark bottom-right shadow -->
    <item android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#B4BBCA"/> <!-- subtle shadow updated -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>











